  "paths": {
    "/v1/me": {
      "get": {
        "tags": [
          "Spotify"
        ],
        "summary": "Get User ID",
        "security": [
          {
            "bearerAuth": []
          }
        ],
        "responses": {
          "200": {
            "description": "Successful response",
            "content": {
              "application/json": {
                "schema": {
                  "type": "object",
                  "properties": {
                    "id": {
                      "type": "string",
                      "description": "Your user id",
                      "example": "6WjLMm5KC2gRJu8gqbO2LY"
                    },
                    "display_name": {
                      "type": "string",
                      "description": "Your display name",
                      "example": "Bilbo Baggins"
                    }
                  }
                }
              }
            }
          }
        }
      }
    },
    "/v1/me/player/devices": {
