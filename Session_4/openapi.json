            "in": "query",
            "schema": {
              "title": "Query",
              "description": "Your search query.\n"
            }
          },
          {
            "name": "type",
            "required": true,
            "in": "query",
            "schema": {
              "title": "Track",
              "description": "Your track\n"
            }
          },
          {
            "name": "limit",
            "required": false,
            "in": "query",
            "schema": {
              "title": "Limit",
              "description": "The maximum number of results to return in each item type.\n",
              "default": 1,
              "example": 1,
              "type": "integer",
              "minimum": 1,
              "maximum": 50
            }
          },
          {
            "name": "offset",
            "required": false,
            "in": "query",
            "schema": {
              "title": "Offset",
              "description": "The index of the first result to return. Use\nwith limit to get the next page of search results.\n",
              "default": 0,
              "minimum": 0,
              "maximum": 1000,
              "example": 1,
              "type": "integer"
            }
          }
        ],
        "responses": {
          "201": {
            "description": "Happened",
